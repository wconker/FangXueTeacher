<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/search_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_top_layout_height_middle"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:focusableInTouchMode="true"
    app:cardBackgroundColor="@color/gray_trans"
    app:cardCornerRadius="15dp"
    app:cardElevation="@dimen/app_bar_default_elevation">

    <ImageView
        android:visibility="gone"
        android:id="@+id/search_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:padding="@dimen/search_back_padding"
        android:src="@drawable/ic_arrow_back_black" />


    <EditText
        android:id="@+id/search_edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|end"
        android:layout_marginEnd="@dimen/search_edit_margin_start"
        android:layout_marginStart="@dimen/search_edit_margin_end"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="输入检索内容"
        android:imeOptions="actionSearch"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/default_small_text_size" />


    <ImageView
        android:id="@+id/search_text_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:layout_marginEnd="@dimen/search_clear_button_margin_end"
        android:src="@drawable/ic_close_black"
        android:visibility="gone" />


    <ImageButton
        android:clickable="true"
        android:id="@+id/search_img"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:padding="@dimen/search_back_padding"
        android:background="@drawable/imageclick"/>


</android.support.v7.widget.CardView>

