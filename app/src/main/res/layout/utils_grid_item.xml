<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:background="@color/white"
    android:orientation="vertical">



        <LinearLayout
            android:id="@+id/class_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gv_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/gv_image"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginLeft="@dimen/default_tiny_padding"
                android:layout_marginRight="@dimen/default_tiny_padding"
                android:layout_weight="1"
                android:src="@drawable/teacher_homework" />

            <TextView
                android:id="@+id/gv_title"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:gravity="center|left"

                android:textSize="14dp" />
        </LinearLayout>


</LinearLayout>