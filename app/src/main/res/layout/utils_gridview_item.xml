<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:background="@color/white"
    android:orientation="vertical">


    <com.mcxtzhang.swipemenulib.SwipeMenuLayout
        android:layout_width="match_parent"
        android:id="@+id/SwipeMenuLayout"
        android:layout_height="wrap_content"
        app:ios="false"
        app:leftSwipe="true"
        app:swipeEnable="true">

        <LinearLayout
            android:id="@+id/class_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gv_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/gv_image"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginLeft="@dimen/default_tiny_padding"
                android:layout_marginRight="@dimen/default_tiny_padding"
                android:layout_weight="1"
                android:src="@drawable/teacher_homework" />

            <TextView
                android:id="@+id/gv_title"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:gravity="center|left"

                android:textSize="14dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="#d9dee4"
            android:text="修改"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/red"
            android:text="删除"
            android:textColor="@android:color/white" />

    </com.mcxtzhang.swipemenulib.SwipeMenuLayout>
</LinearLayout>